{
    "compilerOptions": {
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "serverDist",
        "baseUrl": "./",
        "forceConsistentCasingInFileNames": true,
        "strictPropertyInitialization": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "ES2022",
        "lib": ["ES2022", "dom"],
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ],
    "scripts": {
        "build": "tsc"
    }
}